@* Views/Home/Index.cshtml *@
@{
    ViewData["Title"] = "Yetenek Pusulası'na Hoş Geldiniz!";
}
@using Microsoft.AspNetCore.Identity;
@using YetenekPusulasi.Data;
@using YetenekPusulasi.Core.Interfaces.Services;
@inject SignInManager<ApplicationUser> SignInManager
<div class="hero-section text-center">
    <div class="container">
        <h1 class="display-3">Yetenek Pusulası</h1>
        <p class="lead">Öğrencilerin potansiyelini keşfedin, bilişsel ve kişisel yeteneklerini yapay zeka destekli senaryolarla analiz edin ve onlara geleceğe yönelik bir rehber olun!</p>
        <hr class="my-4 bg-light" style="opacity: 0.5;">
        <p>Bu platform, ilkokul ve ortaokul öğrencilerinin karar verme, sorun çözme, analitik düşünme gibi kritik becerilerini yenilikçi yöntemlerle değerlendirmenize olanak tanır.</p>
        @if (SignInManager.IsSignedIn(User))
        {
            if (User.IsInRole("Teacher"))
            {
                <a class="btn btn-light btn-lg m-2 px-4" asp-controller="Teacher" asp-action="Dashboard"><i class="bi bi-speedometer2 me-2"></i>Öğretmen Paneline Git</a>
            }
            else if (User.IsInRole("Student"))
            {
                <a class="btn btn-light btn-lg m-2 px-4" asp-controller="Student" asp-action="Dashboard"><i class="bi bi-journals me-2"></i>Öğrenci Paneline Git</a>
            }
        }
        else
        {
            <a class="btn btn-primary btn-lg m-2" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap</a>
            <a class="btn btn-outline-light btn-lg m-2 px-4" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-plus-fill me-2"></i>Kayıt Ol</a>
        }
    </div>

</div>
<div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-lightbulb-fill fs-1 text-primary mb-3"></i>
                    <h5 class="card-title">Yenilikçi Değerlendirme</h5>
                    <p class="card-text">Standart testlerin ötesine geçin. Kişiselleştirilmiş senaryolarla öğrencilerin gerçek yeteneklerini ortaya çıkarın.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-clipboard-data-fill fs-1 text-success mb-3"></i>
                    <h5 class="card-title">AI Destekli Analiz</h5>
                    <p class="card-text">Yapay zeka ile güçlendirilmiş analizlerle öğrencilerin cevaplarından derinlemesine çıkarımlar yapın.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-bar-chart-line-fill fs-1 text-info mb-3"></i>
                    <h5 class="card-title">Kişiye Özel Geri Bildirim</h5>
                    <p class="card-text">Her öğrenci için özelleştirilmiş geri bildirimler ve gelişim önerileri sunarak rehberliğinizi güçlendirin.</p>
                </div>
            </div>
        </div>
    </div>
</div>
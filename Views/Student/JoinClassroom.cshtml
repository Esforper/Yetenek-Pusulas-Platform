@model YetenekPusulasi.Models.StudentViewModels.JoinClassroomViewModel
@{
    ViewData["Title"] = "Sınıfa Katıl";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="JoinClassroom" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="ParticipationCode" class="form-label">
                                <i class="bi bi-key me-1"></i>Katılım Kodu
                            </label>
                            <input asp-for="ParticipationCode" class="form-control form-control-lg" 
                                   placeholder="Öğretmeninizden aldığınız katılım kodunu girin" />
                            <span asp-validation-for="ParticipationCode" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>Öğretmeninizden aldığınız katılım kodunu buraya girin.
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-grow-1">
                                <i class="bi bi-check-circle me-1"></i>Katıl
                            </button>
                            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 1rem;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 1.5rem;
    }

    .form-control {
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,.15);
    }

    .btn {
        border-radius: 0.5rem;
        padding: 0.75rem 1.5rem;
    }

    .form-text {
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }
</style> 
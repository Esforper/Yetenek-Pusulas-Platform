@model List<YetenekPusulasi.Core.Interfaces.Entities.IScenario> 
@{
    ViewData["Title"] = $"'{ViewBag.ClassroomName}' Sınıfı Senaryoları";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h3 mb-2">
                                <i class="bi bi-journal-text me-2"></i>@ViewData["Title"]
                            </h1>
                            <p class="text-muted mb-0">Aşağıda bu sınıfa atanmış senaryoları görebilirsiniz. Bir senaryoyu yapmak için üzerine tıklayın.</p>
                        </div>
                        <a asp-action="Dashboard" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Panele Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-list-check me-2"></i>Senaryolar
                            <span class="badge bg-primary ms-2">@Model.Count()</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            @foreach (var scenario in Model)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 border-0 shadow-sm hover-card">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="bi bi-journal-text text-primary fs-4 me-2"></i>
                                                <h5 class="card-title mb-0">@scenario.Title</h5>
                                            </div>
                                            <p class="card-text text-muted small mb-3">
                                                @scenario.Description
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="badge bg-info text-dark">
                                                    <i class="bi bi-tag me-1"></i>@scenario.Type.ToString()
                                                </span>
                                                <a asp-action="ViewScenario" asp-route-scenarioId="@scenario.Id" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-arrow-right me-1"></i>Senaryoyu Gör
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-journal-x display-1 text-muted mb-3"></i>
                        <h5 class="text-muted">Henüz Senaryo Bulunmuyor</h5>
                        <p class="text-muted">Bu sınıfa henüz atanmış bir senaryo bulunmamaktadır.</p>
                        <a asp-action="Dashboard" class="btn btn-primary mt-3">
                            <i class="bi bi-arrow-left me-1"></i>Öğrenci Paneline Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        border-radius: 1rem;
        transition: all 0.3s ease;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }

    .badge {
        font-weight: 500;
        padding: 0.5em 0.8em;
    }

    .btn {
        border-radius: 0.5rem;
    }

    .text-muted {
        color: #6c757d!important;
    }
</style> 
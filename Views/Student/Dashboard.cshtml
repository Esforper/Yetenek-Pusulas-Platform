@* Views/Student/Dashboard.cshtml *@
@model IEnumerable<YetenekPusulasi.Core.Entities.Classroom>
@{
    ViewData["Title"] = "Öğrenci Paneli";
}

<h4>Merhaba, @ViewBag.StudentName!</h4>
<p>Aşağıda kayıtlı olduğunuz sınıfları görebilirsiniz.</p>

<div class="mb-3">
    <a asp-action="JoinClassroom" class="btn btn-primary">Yeni Bir Sınıfa Katıl</a>
</div>

@if (Model.Any())
{
    <h5>Kayıtlı Olduğunuz Sınıflar</h5>
    <div class="list-group">
        @foreach (var classroom in Model)
        {
            <a asp-action="ViewClassroomScenarios" asp-route-classroomId="@classroom.Id" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1">@classroom.Name</h6>
                    <small>Öğretmen: @(classroom.Teacher?.UserName ?? "N/A")</small>
                </div>
                <p class="mb-1">@(!string.IsNullOrEmpty(classroom.Description) ? classroom.Description : "Açıklama yok.")</p>
            </a>
        }
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        Henüz hiçbir sınıfa kayıtlı değilsiniz. "Yeni Bir Sınıfa Katıl" butonu ile bir sınıfa katılabilirsiniz.
    </div>
}